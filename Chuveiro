package Trabalho2;

public class Chuveiro {
    private boolean ligado;

    public void ligar(){
        if(!ligado){
            ligado = true;
            System.out.println("O chuveiro foi ligado");
        } else {
            System.out.println("O chuveiro foi ligado");
        }
    }
    public void desligar(){
        if(ligado){
            ligado = false;
            System.out.println("O chuveiro foi desligado");
        } else {
            System.out.println("O chuveiro foi desligado");
        }
    }
    public boolean isLigado(){
        return ligado;
    }
    public void observar(){
        if(ligado){
            System.out.println("O chuveiro esta ligado");
        } else {
            System.out.println("O chuveiro esta desligado");
        }
    }
}
