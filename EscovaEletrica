package Trabalho2;

public class EscovaEletrica {
    private boolean ligado;

    public void ligar(){
        if(!ligado){
            ligado = true;
            System.out.println("A escova eletrica foi ligada");
        } else {
            System.out.println("A escova eletrica foi ligada");
        }
    }
    public void desligar(){
        if(ligado){
            ligado = false;
            System.out.println("A escova eletrica foi desligada");
        } else {
            System.out.println("A escova eletrica foi desligada");
        }
    }
    public boolean isLigado(){
        return ligado;
    }
    public void observar(){
        if(ligado){
            System.out.println("A escova eletrica esta ligada");
        } else {
            System.out.println("A escova eletrica esta desligada");
        }
    }
}
