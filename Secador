package Trabalho2;

public class Secador {
    private boolean ligado;

    public void ligar(){
        if(!ligado){
            ligado = true;
            System.out.println("O secador foi ligado");
        } else {
            System.out.println("O secador foi ligado");
        }
    }
    public void desligar(){
        if(ligado){
            ligado = false;
            System.out.println("O secador foi desligado");
        } else {
            System.out.println("O secador foi desligado");
        }
    }
    public boolean isLigado(){
        return ligado;
    }
    public void observar(){
        if(ligado){
            System.out.println("O secador esta ligado");
        } else {
            System.out.println("O secador esta desligado");
        }
    }
}
